{% trans_default_domain 'sfs_image' %}
{% extends '@SfsImage/admin_layout.html.twig' %}
{% block title %}{{ 'admin_types.list.page_title'|trans }}{% endblock %}

{% block content %}

    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3">Types</h1>

        {% if is_granted('ROLE_ADMIN_IMAGE_TYPE_CREATE') %}
            <a href="{{ url('sfs_image_admin_types_create') }}" class="btn btn-primary mb-3">Create type</a>
        {% endif %}
    </div>


    {{ form_start(filterForm) }}
    {{ form_widget(filterForm) }}
    {{ form_rest(filterForm) }}
    {{ form_end(filterForm) }}

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">{{ 'admin_types.list.fields.id.header'|trans }}</th>
            <th scope="col">{{ 'admin_types.list.fields.name.header'|trans }}</th>
            <th scope="col">{{ 'admin_types.list.fields.enabled.header'|trans }}</th>

            <th scope="col">&nbsp;{#{{ 'admin_types.list.actions.header'|trans }}#}</th>
{#            <th>&nbsp;</th>#}
        </tr>
        </thead>

        <tbody>
        {% include '@SfsImage/admin/type/list-page.html.twig' %}
        </tbody>

        {% if entities.pages|default(false) %}
            <tfoot>
            <tr>
                <td colspan="20">
                    {% if entities.prevPage %}
                        <a href="{{ url('sfs_image_admin_types_list', app.request.query.all|merge({ page: entities.prevPage })) }}" title="Prev page"><span class="mdi mdi-24px mdi-chevron-left"></span></a>
                    {% endif %}

                    {% if entities.nextPage %}
                        <a class="float-right" href="{{ url('sfs_image_admin_types_list', app.request.query.all|merge({ page: entities.nextPage })) }}" title="Next page"><span class="mdi mdi-24px mdi-chevron-right"></span></a>
                    {% endif %}
                </td>
            </tr>
            </tfoot>
        {% endif %}
    </table>
{% endblock content %}